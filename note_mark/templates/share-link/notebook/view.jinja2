{% extends "/shared/base.jinja2" %}
{% block title %}View Notebook{% endblock %}
{% block main %}
<h2>{{notebook.prefix }}</h2>
<div>
<h2>Please note live update requires user-share not link</h2>
</div>
<div class="control-bar">
    <a class="icon-bnt" href="{{ url_for('share_link.index') }}" title="Back To Home">{{ macros.feather_img('arrow-left') }}</a>
    {% if scope == "write" %}
    <a class="icon-bnt" href="{{ url_for('share_link.new_note', share_link_uuid=share_link_uuid) }}" title="Create Note">{{ macros.feather_img('file-plus') }}</a>
    {% endif %}
</div>
<div class="container" id="notes">
<h3>Notes</h3>
{% for note in notes %}
    <a class="button" href="{{ url_for('share_link.view_note', share_link_uuid=share_link_uuid, note_uuid=note.uuid) }}">{{ note.prefix }}</a>
{% endfor %}
</div>
{% endblock %}
