{% extends "/shared/base.jinja2" %}
{% block title %}New Notebook{% endblock %}
{% block main %}
<h2></h2>
<div class="control-bar">
    <a href="{{ url_for('personal_home.index') }}" class="icon-bnt" title="Back Home">{{ macros.feather_img('arrow-left') }}</a>
</div>
<form class="container" action="{{ url_for('personal_home.new_notebook') }}" method="post">
    <label for="notebook-name">Name</label>
    <input type="text" name="prefix" id="notebook-name" required placeholder="name..." maxlength="100">
    <button class="button" type="submit">Save</button>
</form>
{% endblock %}
