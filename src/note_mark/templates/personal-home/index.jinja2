{% extends "/shared/base.jinja2" %}
{% block title %}My Home{% endblock %}
{% block main %}

<a class="button" href="{{ url_for('personal_home.new_notebook') }}">New Notebook</a>

<div class="container" id="personal-notebooks">
<h3>My Notebooks</h3>
{% for notebook in owned_notebooks %}
    <a class="button" href="{{ url_for('personal_home.get_notebook', notebook_uuid=notebook.uuid) }}">{{ notebook.prefix }}</a>
{% endfor %}
</div>

<div class="container" id="shared-notebooks">
    <h3>Shared Notebooks</h3>
    {% for notebook in shared_notebooks %}
    <a class="button" href="{{ url_for('personal_home.get_notebook', notebook_uuid=notebook.uuid) }}">{{ notebook.prefix }}</a>
    {% endfor %}
</div>

{% endblock %}
