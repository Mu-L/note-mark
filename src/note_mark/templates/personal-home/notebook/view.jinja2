{% extends "/shared/base.jinja2" %}
{% block title %}View Notebook{% endblock %}
{% block main %}
<h2>{{notebook.prefix }}</h2>
{% if scope in ("write", "owner") %}
<a href="{{ url_for('personal_home.new_note', notebook_uuid=notebook.uuid) }}">Create Note</a>
{% endif %}
{% if scope == "owner" %}
<a href="{{ url_for('personal_home.delete_notebook', notebook_uuid=notebook.uuid) }}">Delete Notebook</a>
<form action="{{ url_for('personal_home.add_user_share', notebook_uuid=notebook.uuid) }}" method="post">
    <h3>Add User Share Notebook</h3>
    <label for="notebook-share-user-uuid">Users</label>
    <select name="user_uuid" id="notebook-share-user-uuid" required>
        <option value=""></option>
        {% for user in users %}
        {% if current_user.auth_id != user.uuid.hex %}
        <option value="{{ user.uuid }}">{{ user.username }}</option>
        {% endif %}
        {% endfor %}
    </select>
    <label for="notebook-share-user-writeaccess">Write Access</label>
    <input type="checkbox" name="write_access" id="notebook-share-user-writeaccess" value="1">
    <button type="submit">Add</button>
</form>
{% endif %}
<div id="notes">
{% for note in notes %}
    <a href="{{ url_for('personal_home.view_note', notebook_uuid=notebook.uuid, note_uuid=note.uuid) }}">{{ note.prefix }}</a>
{% endfor %}
</div>
{% endblock %}
