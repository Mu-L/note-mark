{% extends "/shared/base.jinja2" %}
{% block title %}View Notebook{% endblock %}
{% block main %}
<h2>{{notebook.prefix }}</h2>
<div class="control-bar">
    <a class="button" href="{{ url_for('personal_home.index') }}" title="Back To Home">{{ macros.feather_img('arrow-left') }}</a>
    {% if scope in ("write", "owner") %}
    <a class="button" href="{{ url_for('personal_home.new_note', notebook_uuid=notebook.uuid) }}" title="Create Note">{{ macros.feather_img('file-plus') }}</a>
    {% endif %}
    {% if scope == "owner" %}
    <a class="button" href="{{ url_for('personal_home.rename_notebook', notebook_uuid=notebook.uuid) }}" title="Rename">{{ macros.feather_img('edit-3') }}</a>
    <button onclick="ask_before_get(`{{ url_for('personal_home.delete_notebook', notebook_uuid=notebook.uuid) }}`)" title="Delete">{{ macros.feather_img('trash') }}</button>
    <a class="button" href="{{ url_for('api.notebook_as_zip', notebook_uuid=notebook.uuid) }}" download="{{ notebook.prefix }}.zip" title="Download">{{ macros.feather_img('download') }}</a>
    {% endif %}
</div>

{% if scope == "owner" %}
    <a href="{{ url_for('personal_home.user_share', notebook_uuid=notebook.uuid) }}" class="button">{{ macros.feather_img('user') }}Manage User Shares</a>
    <a href="{{ url_for('personal_home.share_link', notebook_uuid=notebook.uuid) }}" class="button">{{ macros.feather_img('link') }}Manage Link Shares</a>
{% endif %}

<div class="container" id="notes">
    <h3>Notes</h3>
    {% include('/shared/includes/notes.jinja2') %}
</div>
<script>
    listen_for_ws_updates(`{{ url_for('api.notebook_update_ws', notebook_uuid=notebook.uuid, token=get_ws_token()) }}`);
    window.addEventListener(
        get_ws_event_type(WS_MESSAGE_CATEGORY.NOTEBOOK_REMOVE),
        _event => { handle_notebook_remove("{{ url_for('personal_home.index') }}") });
    window.addEventListener(
        get_ws_event_type(WS_MESSAGE_CATEGORY.NOTE_CREATE),
        _event => { handle_notebook_notes_change("{{ url_for('api.rendered_notes_list', notebook_uuid=notebook.uuid) }}") });
    window.addEventListener(
        get_ws_event_type(WS_MESSAGE_CATEGORY.NOTE_REMOVE),
        _event => { handle_notebook_notes_change("{{ url_for('api.rendered_notes_list', notebook_uuid=notebook.uuid) }}") });
    window.addEventListener(
        get_ws_event_type(WS_MESSAGE_CATEGORY.NOTE_PREFIX_CHANGE),
        _event => { handle_notebook_notes_change("{{ url_for('api.rendered_notes_list', notebook_uuid=notebook.uuid) }}") });
</script>
{% endblock %}
