{% extends "/shared/base.jinja2" %}
{% block title %}View Notebook{% endblock %}
{% block main %}
<h2>{{notebook.prefix }}</h2>
<div class="control-bar">
    <a class="button" href="{{ url_for('share_link.index') }}">Back To Home</a>
    {% if scope == "write" %}
    <a class="button" href="{{ url_for('share_link.new_note', share_link_uuid=share_link_uuid) }}">Create Note</a>
    {% endif %}
</div>
<div class="container" id="notes">
<h3>Notes</h3>
{% for note in notes %}
    <a class="button" href="{{ url_for('share_link.view_note', share_link_uuid=share_link_uuid, note_uuid=note.uuid) }}">{{ note.prefix }}</a>
{% endfor %}
</div>
{% endblock %}
